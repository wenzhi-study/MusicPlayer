<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/colorTransparent"
        >
        <TextView
            android:id="@+id/tv_which_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:maxEms="9"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="歌曲名"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_which_song"
            android:maxLines="1"
            android:maxEms="9"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/tv_which_song"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:text="歌手名"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:maxEms="9"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_partition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="15sp"
            android:layout_toRightOf="@id/tv_singer_name"
            android:layout_alignTop="@id/tv_singer_name"
            />
        <TextView
            android:id="@+id/tv_music_special_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:text="专辑名字"
            android:textStyle="bold"
            android:layout_toRightOf="@id/tv_partition"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:maxEms="9"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_music_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="3:20"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>